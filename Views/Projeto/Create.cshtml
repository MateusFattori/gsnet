@model gsnet.Models.Projeto

<h2>Novo Projeto</h2>

<form method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label for="dt_inicio">Data de Início:</label>
        <input type="date" class="form-control" id="dt_inicio" name="dt_inicio" value="@Model.dt_inicio.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="dt_final">Data de Término:</label>
        <input type="date" class="form-control" id="dt_final" name="dt_final" value="@Model.dt_final.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <textarea class="form-control" id="Descricao" name="Descricao">@Model.Descricao</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
