@model gsnet.Models.Coral

<h1>Editar Coral</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Especie" class="control-label"></label>
        <input asp-for="Especie" class="form-control" />
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjetoId" class="control-label"></label>
        <select asp-for="ProjetoId" class="form-control" asp-items="@(new SelectList(ViewBag.Projetos, "Id", "Nome"))"></select>
        <span asp-validation-for="ProjetoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
